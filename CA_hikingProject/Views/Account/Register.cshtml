
@model CA_hikingProject.Models.RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Anton|Calistoga&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/5e88d62c54.js"></script>
    <link rel="stylesheet" href="~/lib/owlcarousel/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="~/lib/owlcarousel/assets/owl.theme.default.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/magnific-popup.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/logIn.css">
    <title>Qeydiyyat</title>
</head>

<body>


    <section id="register">

        <div class="container">
            <div class="btn_reg pl-2 d-flex justify-content-start" style="color: black;">
                <a href="home.html">
                    <i class="fas fa-arrow-left"></i>
                </a>

            </div>
            <div class="formArea">
                <div class="row">


                    <div class="col-md-12 col-12 ">

                        <div class="sectionHeader">
                            <h2>Qeydiyyat</h2>
                        </div>


                    </div>
                    <div class="col-md-12 col-12">
                        <div class="regform d-flex justify-content-center">
                           <div asp-validation-summary="All"></div>
                            <form asp-controller="account" asp-action="register" method="post">
                                <input type="text" name="name" required placeholder="Ad">
                                <input type="text" name="surname" required placeholder="Soyad">
                                <input asp-for="Email" type="text" name="Email" id="Email" required placeholder="Email">
                                <span asp-validation-for="Email"></span>
                                <input type="password" asp-for="Password" name="password" required placeholder="Sifre">

                                <span asp-validation-for="Password"></span>
                                <input type="password" name="confirmpassword" required placeholder="Sifre tekrar">
                                <div class="btn_box  mt-3">
                                    <button type="submit" class="btn_regfrm">Qeydiyyatdan kec</button>
                                </div>
                            </form>

                        </div>


                    </div>
                </div>
            </div>

        </div>
    </section>


    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
