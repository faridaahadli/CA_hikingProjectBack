
@model CA_hikingProject.DbModels.SingleTour

@{
    ViewData["Title"] = "Create";
}



<div class="col-md-8">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StartDate" class="control-label"></label>
            <input asp-for="StartDate" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EndDate" class="control-label"></label>
            <input asp-for="EndDate" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Location" class="control-label"></label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MaxPersonLimit" class="control-label"></label>
            <input asp-for="MaxPersonLimit" class="form-control" />
            <span asp-validation-for="MaxPersonLimit" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
            </label>
        </div>
        <div class="form-group">
            <label asp-for="MeetAddress" class="control-label"></label>
            <input asp-for="MeetAddress" class="form-control" />
            <span asp-validation-for="MeetAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SalePercent" class="control-label"></label>
            <input asp-for="SalePercent" class="form-control" />
            <span asp-validation-for="SalePercent" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LocationStory" class="control-label"></label>
            <input asp-for="LocationStory" class="form-control" />
            <span asp-validation-for="LocationStory" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Warning" class="control-label"></label>
            <input asp-for="Warning" class="form-control" />
            <span asp-validation-for="Warning" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TourTypeId" class="control-label"></label>
            <select asp-for="TourTypeId" class="form-control" asp-items="ViewBag.TourTypeId"></select>
        </div>
        <div class="form-group">
            <label class="control-label"></label>
            <select class="mdb-select colorful-select dropdown-primary md-form" name="guides" multiple>
                <option value="" disabled selected>Beledcilere secin</option>
                @foreach (var item in ViewBag.Guides)
                {
                    <option value="@item.Id">@item.Name  @item.Surname</option>
                }

           
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>






<div>
    <a asp-action="Index">Back to List</a>
</div>
